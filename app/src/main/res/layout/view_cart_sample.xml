<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/shape_category_card"
    android:padding="5dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cart_sample_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_shopping_cart_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cart_sample_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Products Name"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/iv_cart_sample_im"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cart_sample_price_title"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Unit Price"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/iv_cart_sample_im"
        app:layout_constraintTop_toBottomOf="@id/tv_cart_sample_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cart_sample_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="10sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/tv_cart_sample_price_title"
        app:layout_constraintTop_toBottomOf="@id/tv_cart_sample_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cart_sample_quantity_title"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/iv_cart_sample_im"
        app:layout_constraintTop_toBottomOf="@id/tv_cart_sample_price" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cart_sample_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="quantity"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/tv_cart_sample_quantity_title"
        app:layout_constraintTop_toBottomOf="@id/tv_cart_sample_price" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cart_sample_amount_title"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/iv_cart_sample_im"
        app:layout_constraintTop_toBottomOf="@id/tv_cart_sample_quantity" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cart_sample_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Price"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/tv_cart_sample_amount_title"
        app:layout_constraintTop_toBottomOf="@id/tv_cart_sample_quantity" />

</androidx.constraintlayout.widget.ConstraintLayout>